{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "reference.json",
    "title": "Reference",
    "description": "A reference to a document, section, or fragment in the database",
    "oneOf": [
        {
            "properties": {
                "kind": {
                    "enum": ["document"]
                },
                "documentId": {
                    "type": "string"
                }
            },
            "required": ["kind", "documentId"],
            "additionalProperties": false
        },
        {
            "properties": {
                "kind": {
                    "enum": ["section"]
                },
                "documentId": {
                    "type": "string"
                },
                "sectionId": {
                    "type": "string"
                }
            },
            "required": ["kind", "documentId", "sectionId"],
            "additionalProperties": false
        },
        {
            "properties": {
                "kind": {
                    "enum": ["fragment"]
                },
                "documentId": {
                    "type": "string"
                },
                "sectionId": {
                    "description": "Present only in references to multipart documents",
                    "type": "string"
                },
                "fragmentId": {
                    "type": "string"
                }
            },
            "required": ["kind", "documentId", "fragmentId"],
            "additionalProperties": false
        }
    ]
  }
  