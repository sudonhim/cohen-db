{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sectionalcontent.json",
  "title": "SectionalContent",
  "type": "object",
  "description": "A piece of content in a multipart document",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "$ref": "textfragment.json"
    },
    "fragments": {
      "type": "array",
      "items": {
        "$ref": "fragment.json"
      }
    }
  },
  "required": ["id", "title", "fragments"],
  "additionalProperties": false
}
